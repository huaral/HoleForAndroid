<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/siderMainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

   <ImageView
       android:id="@+id/sider_user"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_marginLeft="90sp"
       android:layout_marginTop="30dp"
       android:src="@mipmap/ic_sider_user"/>
    <TextView
        android:id="@+id/sider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sider_user"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:text="森屿暖树"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sider_name"
        android:layout_marginLeft="90dp"
        android:text="see prifile" />
</RelativeLayout>
